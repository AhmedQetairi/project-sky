                    </group>
                    <group>
                        <field name="status"/>
                        <field name="start_date"/>
                        <field name="end_date"/>

                    </group>
                </sheet>
            </form>  -->
    
        
    </record>
    
    <!-- Tree view of billboard reservation -->
    <record id="action_billboard_tree_view" model="ir.ui.view">
        <field name="name">billboard.reservation.tree</field>
        <field name="model">sky.billboard</field>
        <field name="arch" type="xml">
            <tree
                decoration-bf="status == 'occupied'"
                decoration-info="status == 'available'" 
            >
                <field name="name" />
                <field name="site" />
                <field name="start_date" />
                <field name="end_date" />
                <field name="status" />
                
            </tree>
        </field>
                     
    </record>
    
    
    
    <!-- Action for Site -->
    <record id="action_site" model="ir.actions.act_window">
        <field name="name">Site</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">billboard.site</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html"> 
            <p class="o_view_nocontent_smiling_face"> Create First Site !!!</p>
        </field>
    </record>
    
</odoo>