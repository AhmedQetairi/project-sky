<?xml version="1.0" encoding="utf-8" ?>
<odoo>
   
     <!-- Form view of Billboard reservation-->
    <record id="action_billboard_form_view" model="ir.actions.act_window">
        <field name="name">billboard.reservation.form</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sky.billboard</field>
        <field name="context">{}</field>
        <field name="help" type="html"> 
            <p class="o_view_nocontent_smiling_face"> Create First Billboard</p>
        </field>
        
